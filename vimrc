
filetype on
filetype plugin on
filetype indent on

syntax enable

set encoding=utf-8

set number
"set cul
"set ruler
set expandtab
set smarttab
set tabstop=4
set shiftwidth=4
set softtabstop=4

set ai " auto indent
set si " smart indent
set wrap " wrap lines

autocmd FileType make set noexpandtab shiftwidth=4 softtabstop=0

